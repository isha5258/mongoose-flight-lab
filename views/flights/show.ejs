<%- include('../partials/html-head') %> 
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airport:</div>
    <div>
      <%= flight.airport %>
      <a href="/flights/<%= flight._id %>/edit">
        <button>Edit Flight</button>
      </a>
    </div>
    <div>Flight#:</div>
    <div> <%= flight.flightNo %></div>
    <div>Airline:</div>
    <div><%= flight.airline %></div>
    <div>Departure:</div>
    <div><%= flight.departs %></div>
    <div>Meal:</div>
    <ul>
      <% flight.meal.forEach(flightMeal => { %>
        <li><%= meal.name %></li>
      <% }) %> 
    </ul>
  </section>
  <form id="add-meal-to-flight" action="/flights/<%= flight._id %>/meals" method="POST">
    <select name="mealId">
      <% meals.forEach(meal => { %>
        <option value="<%= meal._id %> "><%= meal.name %></option>
      <% }) %>
    </select>
    <button type="submit">Add to Flight</button>
  </form>
  <h2>Tickets</h2>
  <form 
    id="add-ticket-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="seat-textarea">Seat:</label>
    <input name="seat" id="seat-textarea" required pattern="[A-F][1-9]\d?">
    <label for="price-select">Price:</label>
    <input type="text" name="price" required>
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flight.tickets.forEach(function(ticket) { %>
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Tickets Yet</h3>
  <% } %>
</main>
<%- include('../partials/footer') %> 